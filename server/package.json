{
  "name": "mask_api_midwayjs",
  "private": true,
  "version": "0.6.0",
  "description": "🎉 基于 Midwayjs 的管理系统后端接口服务",
  "author": "TsMask",
  "repository": {
    "type": "git",
    "url": "https://gitee.com/TsMask/mask_api_midwayjs"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "./bootstrap.js",
  "scripts": {
    "start:docker": "NODE_ENV=production pm2-runtime start ./bootstrap.js --name mask_api -i 2",
    "start:pm2": "NODE_ENV=production pm2 start ./bootstrap.js --name mask_api -i 2",
    "start": "NODE_ENV=production node ./bootstrap.js",
    "dev": "cross-env NODE_ENV=local mwtsc --watch --run @midwayjs/mock/app.js",
    "test": "cross-env NODE_ENV=unittest jest",
    "cov": "jest --coverage",
    "lint": "mwts check",
    "lint:fix": "mwts fix",
    "ci": "npm run cov",
    "build": "mwtsc --cleanOutDir"
  },
  "dependencies": {
    "@dropb/diskinfo": "3.0.0",
    "@midwayjs/bootstrap": "3.20.3",
    "@midwayjs/bull": "3.20.3",
    "@midwayjs/core": "3.20.3",
    "@midwayjs/cross-domain": "3.20.3",
    "@midwayjs/decorator": "^3.20.3",
    "@midwayjs/koa": "3.20.3",
    "@midwayjs/logger": "3.4.2",
    "@midwayjs/redis": "3.20.3",
    "@midwayjs/security": "3.20.3",
    "@midwayjs/static-file": "3.20.3",
    "@midwayjs/typeorm": "3.20.3",
    "@midwayjs/upload": "3.20.3",
    "@midwayjs/validate": "3.20.3",
    "@node-rs/bcrypt": "1.10.7",
    "axios": "^1.10.0",
    "cron-parser": "5.0.4",
    "dayjs": "1.11.13",
    "exceljs": "4.4.0",
    "jsonwebtoken": "9.0.2",
    "mini-svg-data-uri": "1.4.4",
    "mysql2": "3.13.0",
    "nanoid": "3.3.8",
    "svg-captcha-fixed": "1.5.2",
    "typeorm": "0.3.21",
    "ua-parser-js": "2.0.2"
  },
  "devDependencies": {
    "@midwayjs/mock": "3.20.3",
    "@midwayjs/swagger": "^3.20.6",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "9.0.9",
    "@types/koa": "2.15.0",
    "@types/node": "^18.0.0",
    "cross-env": "7.0.3",
    "jest": "29.7.0",
    "mwts": "1.3.0",
    "mwtsc": "1.15.1",
    "swagger-ui-dist": "^5.25.2",
    "ts-jest": "29.2.6",
    "typescript": "5.1.6"
  },
  "midway-bin-clean": [
    ".vscode/.tsbuildinfo",
    "dist"
  ]
}
